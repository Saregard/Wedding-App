<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BordsplaceringScreen"
    android:background="@color/background_green"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bordsplacering"
        android:textAllCaps="true"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/bord1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="b"/>

    <ImageButton
        android:id="@+id/bord2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toStartOf="@+id/bord7"
        app:layout_constraintTop_toBottomOf="@+id/bord1" />

    <ImageButton
        android:id="@+id/bord3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toStartOf="@+id/bord8"
        app:layout_constraintTop_toBottomOf="@+id/bord2" />

    <ImageButton
        android:id="@+id/bord4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toStartOf="@+id/bord9"
        app:layout_constraintTop_toBottomOf="@+id/bord3" />

    <ImageButton
        android:id="@+id/bord5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toStartOf="@+id/bord10"
        app:layout_constraintTop_toBottomOf="@+id/bord4" />

    <ImageButton
        android:id="@+id/bord6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bord1"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <ImageButton
        android:id="@+id/bord7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bord1"
        app:layout_constraintTop_toBottomOf="@+id/bord6" />

    <ImageButton
        android:id="@+id/bord8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bord1"
        app:layout_constraintTop_toBottomOf="@+id/bord7" />

    <ImageButton
        android:id="@+id/bord9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bord1"
        app:layout_constraintTop_toBottomOf="@+id/bord8" />

    <ImageButton
        android:id="@+id/bord10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bord1"
        app:layout_constraintTop_toBottomOf="@+id/bord9" />





</androidx.constraintlayout.widget.ConstraintLayout>