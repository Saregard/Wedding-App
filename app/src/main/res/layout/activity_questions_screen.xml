<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context=".QuestionsScreen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ninnaBild"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/ninna_bild"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/ninnaPhoneIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_icons"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/phone_icon"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/ninnaPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123123123123" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/ninnaEmailIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_icons"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/email_icon"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/ninnaEmai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asd@asd.com"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/johanBild"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/johan_bild"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/johanPhoneIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_icons"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/phone_icon"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/johanPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123123123123"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/johanEmainIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_icons"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/email_icon"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/johanEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asd@asd.com"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>