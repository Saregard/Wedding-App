<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="-80dp"
        android:src="@drawable/wedding_picture" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingVertical="0dp">

        <ImageView
            android:id="@+id/boendeText"
            android:layout_width="132dp"
            android:layout_height="132dp"
            app:layout_constraintBottom_toBottomOf="@+id/boendeButton"
            app:layout_constraintEnd_toEndOf="@+id/boendeButton"
            app:layout_constraintStart_toStartOf="@+id/boendeButton"
            app:layout_constraintTop_toTopOf="@+id/boendeButton" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/boendeButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/banner_white"
            app:cardCornerRadius="100dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@id/wishlistButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/kladkodButton"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1.5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/home" />

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/onskelistaText"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_marginBottom="-110dp"
            app:layout_constraintBottom_toBottomOf="@id/wishlistButton"
            app:layout_constraintEnd_toEndOf="@+id/wishlistButton"
            app:layout_constraintStart_toStartOf="@+id/wishlistButton"
            app:layout_constraintTop_toTopOf="@+id/wishlistButton" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/wishlistButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/banner_white"
            android:foreground="@drawable/circle_ripple"
            app:cardCornerRadius="100dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@id/bordsplaceringButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tidsschemaButton"
            app:layout_constraintTop_toBottomOf="@+id/boendeButton"
            app:strokeColor="@color/black"
            app:strokeWidth="1.5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="22dp"
                android:scaleType="centerInside"
                android:src="@drawable/giftbox" />

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/bordsplaceringText"
            android:layout_width="139dp"
            android:layout_height="132dp"
            android:layout_marginBottom="-110dp"
            app:layout_constraintBottom_toBottomOf="@id/bordsplaceringButton"
            app:layout_constraintEnd_toEndOf="@+id/bordsplaceringButton"
            app:layout_constraintStart_toStartOf="@+id/bordsplaceringButton"
            app:layout_constraintTop_toTopOf="@+id/bordsplaceringButton" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bordsplaceringButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/banner_white"
            android:foreground="@drawable/circle_ripple"
            app:cardCornerRadius="100dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/platsButton"
            app:layout_constraintTop_toBottomOf="@id/wishlistButton"
            app:strokeColor="@color/black"
            app:strokeWidth="1.5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="18dp"
                android:scaleType="centerInside"
                android:src="@drawable/chair" />

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/kladkodText"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_marginBottom="-110dp"
            app:layout_constraintBottom_toBottomOf="@id/kladkodButton"
            app:layout_constraintEnd_toEndOf="@+id/kladkodButton"
            app:layout_constraintStart_toStartOf="@+id/kladkodButton"
            app:layout_constraintTop_toTopOf="@+id/kladkodButton" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/kladkodButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/banner_white"
            android:foreground="@drawable/circle_ripple"
            app:cardCornerRadius="100dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@id/tidsschemaButton"
            app:layout_constraintLeft_toRightOf="@id/boendeButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1.5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/dress" />

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/tidsschemaText"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_marginBottom="-110dp"
            app:layout_constraintBottom_toBottomOf="@id/tidsschemaButton"
            app:layout_constraintEnd_toEndOf="@+id/tidsschemaButton"
            app:layout_constraintStart_toStartOf="@+id/tidsschemaButton"
            app:layout_constraintTop_toTopOf="@+id/tidsschemaButton" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tidsschemaButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/banner_white"
            app:cardCornerRadius="100dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@id/platsButton"
            app:layout_constraintLeft_toRightOf="@+id/wishlistButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kladkodButton"
            app:strokeColor="@color/black"
            app:strokeWidth="1.5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/time" />

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/platsText"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_marginBottom="-110dp"
            app:layout_constraintBottom_toBottomOf="@id/platsButton"
            app:layout_constraintEnd_toEndOf="@+id/platsButton"
            app:layout_constraintStart_toStartOf="@+id/platsButton"
            app:layout_constraintTop_toTopOf="@+id/platsButton" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/platsButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/banner_white"
            android:foreground="@drawable/circle_ripple"
            app:cardCornerRadius="100dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/bordsplaceringButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tidsschemaButton"
            app:strokeColor="@color/black"
            app:strokeWidth="1.5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="22dp"
                android:scaleType="centerInside"
                android:src="@drawable/maps" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/questionsButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/banner_white"
            android:foreground="@drawable/circle_ripple"
            app:cardCornerRadius="50dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1.5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/question_mark" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>